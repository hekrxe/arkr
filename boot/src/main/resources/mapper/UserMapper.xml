<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.arkr.hene.data.dao.UserDAO">

    <resultMap id="BaseResultMap" type="com.arkr.hekr.model.User">
        <id column="id" property="id" jdbcType="VARCHAR"/>
        <result column="username" property="username" jdbcType="VARCHAR"/>
        <result column="id" property="id" jdbcType="BIGINT"/>
        <result column="age" property="age" jdbcType="BIGINT"/>
        <result column="ctm" property="ctm" jdbcType="DATE"/>
    </resultMap>

    <sql id="Base_Column_List">
        id, username, age, ctm
    </sql>

    <select id="queryById" resultMap="BaseResultMap">
        select
        <include refid="Base_Column_List"/>
        from tb_user
        where id = #{id}
    </select>

    <insert id="insert">
        insert into tb_user (username, age,ctm)
        values (#{username},#{age},#{ctm});
    </insert>
</mapper>